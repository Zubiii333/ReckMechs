{
    "name": "car-workshop/appointment-system",
    "description": "Car Workshop Appointment Management System",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "CarWorkshop\\": "backend/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8081 -t . backend/server.php",
        "start": "php -S 0.0.0.0:$PORT -t . backend/server.php"
    },
    "config": {
        "optimize-autoloader": true
    }
}